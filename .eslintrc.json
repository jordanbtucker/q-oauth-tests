{
	"root": true,
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 8
	},
	"plugins": [
		"import",
		"node",
		"standard"
	],
	"extends": [
		"standard",
		"plugin:import/recommended",
		"plugin:node/recommended"
	],
	"rules": {
		"array-bracket-spacing": [
			"error",
			"never"
		],
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"indent": [
			"error",
			"tab"
		],
		"no-process-exit": "off",
		"no-tabs": "off",
		"object-curly-spacing": [
			"error",
			"never"
		],
		"import/unambiguous": "off",
		"node/no-unsupported-features": "off"
	}
}
